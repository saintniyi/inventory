@model IEnumerable<InventoryDto.ProductReadDto>

@{
    ViewData["Title"] = "Product List";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="ProductMvc" asp-action="CreateServer" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Create New Product
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Stock Qty</th>
                    <th>Supplier</th>
                    <th style="width:40%; height:10%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(u => u.Name))
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Category</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.StockQty</td>
                        <td>@item.Supplier?.Name</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="ProductMvc" asp-action="EditServer" asp-route-id="@item.Id" class="btn btn-primary btn-sm mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="ProductMvc" asp-action="DeleteServer" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                                <a asp-controller="ProductMvc" asp-action="DeleteFromServerCallClient" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>