@using InventoryModel.Models
@model InventoryDto.ProductWriteDto

@{
    ViewData["Title"] = "Create Product";
}

<h2 class="text-center my-4">Create Product</h2>

<div class="card shadow border-0 mt-4">
    <div class="card-body">
        <form asp-action="Save" method="post" enctype="multipart/form-data">
            <div class="w-75 mx-auto">
                <!-- Centralized controls at ~2/3 width -->
                <div class="mb-4 mt-5">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Category" class="form-label"></label>
                    <select asp-for="Category" asp-items="Html.GetEnumSelectList<ProductCategory>()" class="form-select">
                        <option value="">--Select Product Category--</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ProductImageFile" class="form-label">Upload Product Image</label>
                    <input asp-for="ProductImageFile" class="form-control" type="file" id="ProductImageFile" />
                    <span asp-validation-for="ProductImageFile" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="StockQty" class="form-label"></label>
                    <input asp-for="StockQty" class="form-control" />
                    <span asp-validation-for="StockQty" class="text-danger"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="SupplierId" class="form-label"></label>
                    <select asp-for="SupplierId" asp-items="@(ViewBag.Suppliers as List<SelectListItem>)" class="form-select">
                        <option value="">--Select Supplier--</option>
                    </select>
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end gap-3 mt-4 mb-4">
                    <a asp-action="IndexServer" asp-controller="ProductMvc" class="btn btn-secondary">Back to List</a>
                    <button type="submit" asp-action="SaveServer" asp-controller="ProductMvc" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>



