@model IEnumerable<InventoryDto.SupplierReadDto>

@{
    ViewData["Title"] = "Supplier List";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Supplier List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="SupplierMvc" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Create New Supplier
                </a>
            </div>
        </div>

        <table id="tblSupplier" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th style="width:30%; height:10%"></th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts {
    <script src="~/js/supplier.js"></script>
}
